<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.artesanoskuad.rickandmorty">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rickandmorty2021"
        tools:targetApi="n">
        <activity
            android:name=".feature.home.ui.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".feature.registro.ui.RegistroActivity"
            android:exported="false"
            android:label="@string/title_activity_registro" />
        <activity
            android:name=".feature.login.ui.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".feature.prelogin.ui.BiometricActivity"
            android:exported="false" />
        <activity
            android:name=".feature.prelogin.ui.FeatureFlagOffActivity"
            android:exported="false" />
        <activity
            android:name=".feature.prelogin.ui.ServerErrorActivity"
            android:exported="false" />
        <activity
            android:name=".feature.prelogin.ui.NoInternetActivity"
            android:exported="false" />
        <activity
            android:name=".feature.prelogin.ui.RootDeviceActivity"
            android:exported="false" />
        <activity
            android:name=".feature.prelogin.ui.PreLoginActivity"
            android:exported="false" />
        <activity
            android:name=".feature.onboarding.OnboardingActivity"
            android:exported="false" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".feature.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>